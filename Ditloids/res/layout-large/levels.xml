<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@drawable/fon_header"
    android:gravity="top"
    android:orientation="vertical" >  
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="542dp"
        android:layout_height="75dp"
        android:src="@drawable/header_fon" /> 
        
<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="8dp"    
    android:text="Выбор уровня"
    android:textSize="28dp" />      
    
    <Button
        android:id="@+id/arrowButton"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"        
        android:background="@drawable/arrow"/>  
         
    <com.ditloids.HorizontalPager
        android:id="@+id/horizontal_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
   			android:gravity="center">
   		<Button   		     		    
     	  	android:id="@+id/level1button"			
			android:background="@drawable/level1"
            android:layout_width="400dp"
            android:layout_height="400dp"
    	    android:layout_marginTop="20dp"/>           
  	
   			<TextView		    
			android:id="@+id/TextView1"
   			android:gravity="center"
			android:text="@string/countlv1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="42dp"
			android:textColor="#d3dae0"
    	    android:layout_marginTop="320dp"
    	    android:layout_marginLeft="130dp"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
   			android:gravity="center">     
   		<Button     		    
     	  	android:id="@+id/level2button"			
			android:background="@drawable/level2"
            android:layout_width="400dp"
            android:layout_height="400dp"
    	    android:layout_marginTop="20dp"/> 	
   			<TextView		    
			android:id="@+id/TextView2"
   			android:gravity="center"
			android:text="@string/countlv2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="42dp"
			android:textColor="#d3dae0"
    	    android:layout_marginTop="320dp"
    	    android:layout_marginLeft="130dp"/>  		
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
   			android:gravity="center">
   		<Button    		    
     	  	android:id="@+id/level3button"			
			android:background="@drawable/level3"
            android:layout_width="400dp"
            android:layout_height="400dp"
    	    android:layout_marginTop="20dp"/>
   			<TextView		    
			android:id="@+id/TextView3"
   			android:gravity="center"
			android:text="@string/countlv3"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="42dp"
			android:textColor="#d3dae0"
    	    android:layout_marginTop="320dp"
    	    android:layout_marginLeft="130dp"/>   		
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
   			android:gravity="center">
   		<Button     		    
     	  	android:id="@+id/level4button"			
			android:background="@drawable/level4"
            android:layout_width="400dp"
            android:layout_height="400dp"
    	    android:layout_marginTop="20dp"/>
   			<TextView		    
			android:id="@+id/TextView4"
   			android:gravity="center"
			android:text="@string/countlv4"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="42dp"
			android:textColor="#d3dae0"
    	    android:layout_marginTop="320dp"
    	    android:layout_marginLeft="130dp"/>   		
        </RelativeLayout>        
        
    </com.ditloids.HorizontalPager>
    
    <RadioGroup
        android:id="@+id/tabs"
        android:layout_height="wrap_content"
        android:layout_width="200dp"       
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"          
   		android:layout_marginBottom="50dp">
        <RadioButton           
            android:id="@+id/radio_btn_0"
            android:checked="true"
			android:width="25dp"
			android:height="25dp" 
            android:layout_weight="1" />
        <RadioButton              
            android:id="@+id/radio_btn_1"
			android:width="25dp"
			android:height="25dp" 
            android:layout_weight="1"/>
        <RadioButton              
            android:id="@+id/radio_btn_2"
			android:width="25dp"
			android:height="25dp" 
            android:layout_weight="1"/>
        <RadioButton           
            android:id="@+id/radio_btn_3"
			android:width="25dp"
			android:height="25dp" 
            android:layout_weight="1"/>        
    </RadioGroup>      
    
</RelativeLayout>
