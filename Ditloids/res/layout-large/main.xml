<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fon_test"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="285dp"
        android:layout_height="110dp"
        android:src="@drawable/ditloid"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp"/>    
    
    <Button android:id="@+id/StartButton"
        android:layout_height="54dp" 
        android:layout_width="250dp" 
        android:layout_marginBottom="25dp"	 
        android:background="@drawable/play_btn" />

    <Button android:id="@+id/SettingsButton"
        android:layout_height="54dp" 
        android:layout_width="250dp"
        android:layout_marginBottom="25dp"	
        android:background="@drawable/opt_btn" />
    
    <Button android:id="@+id/RulesButton"
        android:layout_height="54dp" 
        android:layout_width="250dp"
        android:layout_marginBottom="25dp"	
        android:background="@drawable/rules_btn"  />        
</LinearLayout>