<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fon_options800"
    android:gravity="top">
    
    <Button
        android:id="@+id/arrowButton"
        android:layout_width="50px"
        android:layout_height="35px"
        android:layout_marginTop="15px"
        android:layout_marginLeft="15px"        
        android:background="@drawable/arrow"/>   

    <Button android:id="@+id/sfxButton"
        android:layout_height="57px" 
        android:layout_width="334px" 
        android:layout_marginBottom="25dp"	 
        android:background="@drawable/sfx_on"
        android:layout_marginTop="150dp"
		android:layout_marginLeft="70px"/>

    <Button android:id="@+id/musicButton"
        android:layout_height="57px" 
        android:layout_width="334px" 
        android:layout_marginBottom="25dp"	
        android:background="@drawable/music_on"
		android:layout_marginLeft="70px"         />
    
    <Button android:id="@+id/resetButton"
        android:layout_height="57px" 
        android:layout_width="334px" 
        android:layout_marginBottom="25dp"	
        android:background="@drawable/reset" 
		android:layout_marginLeft="70px"         />        
</LinearLayout>