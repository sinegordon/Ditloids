<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/levelsLayout"
    android:gravity="top"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/header_fon" />       
    
	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:gravity="center"
	    android:layout_marginTop="18dp"    
	    android:text="Выбор уровня"
	    android:textSize="40dp" />      
    
    <Button
        android:id="@+id/arrowButton"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"        
        android:background="@drawable/arrow"/>    
         
    <com.ditloids.HorizontalPager
        android:id="@+id/horizontal_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
   			android:gravity="center">
   		<Button   		     		    
     	  	android:id="@+id/level1button"			
			android:background="@drawable/level1"
            android:layout_width="600dp"
            android:layout_height="600dp"/>           
  	
   			<TextView		    
			android:id="@+id/TextView1"
   			android:gravity="center"
			android:text="@string/countlv1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="42dp"
			android:textColor="#d3dae0"
    	    android:layout_marginTop="450dp"
    	    android:layout_marginLeft="220dp"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
   			android:gravity="center">     
   		<Button     		    
     	  	android:id="@+id/level2button"			
			android:background="@drawable/level2"
            android:layout_width="600dp"
            android:layout_height="600dp"/> 	
  		<TextView
			android:id="@+id/TextView2"
   			android:gravity="center"
			android:text="@string/countlv2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="42dp"
			android:textColor="#d3dae0"
    	    android:layout_marginTop="450dp"
    	    android:layout_marginLeft="220dp"/>   		
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
   			android:gravity="center">
   		<Button    		    
     	  	android:id="@+id/level3button"			
			android:background="@drawable/level3"
            android:layout_width="600dp"
            android:layout_height="600dp"/>
  		<TextView
			android:id="@+id/TextView3"
   			android:gravity="center"
			android:text="@string/countlv3"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="42dp"
			android:textColor="#d3dae0"
    	    android:layout_marginTop="450dp"
    	    android:layout_marginLeft="220dp"/>   		
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
   			android:gravity="center">
   		<Button     		    
     	  	android:id="@+id/level4button"			
			android:background="@drawable/level4"
            android:layout_width="600dp"
            android:layout_height="600dp"/>
  		<TextView
			android:id="@+id/TextView4"
   			android:gravity="center"
			android:text="@string/countlv4"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="42dp"
			android:textColor="#d3dae0"
    	    android:layout_marginTop="450dp"
    	    android:layout_marginLeft="220dp"/>   		
        </RelativeLayout>        
        
    </com.ditloids.HorizontalPager>
    
    <RadioGroup
        android:id="@+id/tabs"
        android:layout_height="wrap_content"
        android:layout_width="200dp"       
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"          
   		android:layout_marginBottom="200dp">
        <RadioButton           
            android:id="@+id/radio_btn_0"
            android:checked="true"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />
        <RadioButton              
            android:id="@+id/radio_btn_1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <RadioButton              
            android:id="@+id/radio_btn_2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <RadioButton           
            android:id="@+id/radio_btn_3"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>        
    </RadioGroup>      
    
</RelativeLayout>
