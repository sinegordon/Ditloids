    android:layout_height="fill_parent"
    android:gravity="bottom"
    android:background="@drawable/fon"
    android:padding="8dip" >

    <Button android:id="@+id/StartButton"
        android:layout_width="168dp"
        android:layout_height="36dp"
        android:background="@drawable/play_btn" android:layout_marginLeft="96dp" android:layout_marginBottom="10dp"/>

    <Button android:id="@+id/SettingsButton"
        android:layout_width="168dp"
        android:layout_height="36dp"
        android:background="@drawable/opt_btn" android:layout_marginLeft="96dp" android:layout_marginBottom="210dp"/>
    
</LinearLayout>