<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/fon_level"
    android:gravity="top" >        
    
    <Button
        android:id="@+id/arrowButton"
        android:layout_width="33dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"        
        android:background="@drawable/arrow"/>
         
    <com.ditloids.HorizontalPager
        android:id="@+id/horizontal_pager"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
   		<Button
			style="@style/levelBtn"      		    
     	  	android:id="@+id/level1button"			
			android:background="@drawable/level1"/>           
  		<TextView
			style="@style/countFont"  		    
			android:id="@+id/TextView1"
			android:layout_alignBottom="@+id/level1button"
			android:layout_alignLeft="@+id/level1button"
			android:text="@string/countlv1"/>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">     
   		<Button
			style="@style/levelBtn"      		    
     	  	android:id="@+id/level2button"			
			android:background="@drawable/level2"/> 	
  		<TextView
			style="@style/countFont"   		    
			android:id="@+id/TextView2"		
			android:layout_alignBottom="@+id/level2button"
			android:layout_alignLeft="@+id/level2button"
			android:text="@string/countlv2"/>   		
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
   		<Button
			style="@style/levelBtn"     		    
     	  	android:id="@+id/level3button"			
			android:background="@drawable/level3"/>
  		<TextView
			style="@style/countFont"   		    
			android:id="@+id/TextView3"		
			android:layout_alignBottom="@+id/level3button"
			android:layout_alignLeft="@+id/level3button"
			android:text="@string/countlv3"/>   		
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
   		<Button
			style="@style/levelBtn"      		    
     	  	android:id="@+id/level4button"			
			android:background="@drawable/level4"/>
  		<TextView
			style="@style/countFont"   		    
			android:id="@+id/TextView4"		
			android:layout_alignBottom="@+id/level4button"
			android:layout_alignLeft="@+id/level4button"
			android:text="@string/countlv4"/>   		
        </RelativeLayout>        
        
    </com.ditloids.HorizontalPager>
    
    <RadioGroup
        android:id="@+id/tabs"
        android:layout_height="wrap_content"
        android:layout_width="180dp"       
        android:orientation="horizontal"
        android:layout_marginLeft="152dp"
        android:layout_marginBottom="100dp">
        <RadioButton
			style="@style/radioBtn"            
            android:id="@+id/radio_btn_0"
            android:checked="true" />
        <RadioButton
			style="@style/radioBtn"               
            android:id="@+id/radio_btn_1"/>
        <RadioButton
			style="@style/radioBtn"               
            android:id="@+id/radio_btn_2"/>
        <RadioButton
			style="@style/radioBtn"               
            android:id="@+id/radio_btn_3"/>        
    </RadioGroup>      
    
</LinearLayout>
