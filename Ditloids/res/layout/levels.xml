<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@drawable/fon_header"
    android:gravity="top"
    android:orientation="vertical" >  
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:src="@drawable/header_fon" /> 
        
	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:gravity="center"
	    android:layout_marginTop="4dp"    
	    android:text="Выбор уровня"
	    android:textSize="20dp" />         
    
    <Button
        android:id="@+id/arrowButton"
        android:layout_width="25dp"
        android:layout_height="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"        
        android:background="@drawable/arrow"/>
	<RelativeLayout
	        android:id="@+id/horizontal_pager"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
            <Button                         
                android:id="@+id/level_button"          
                android:background="@drawable/level1"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginTop="0dp"/>           
        
            <TextView           
                android:id="@+id/level_text_view"
                android:gravity="center"
                android:text="@string/countlv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textColor="#d3dae0"
                android:layout_marginTop="165dp"
                android:layout_marginLeft="75dp"/>	
	</RelativeLayout>    

    <RadioGroup
        android:id="@+id/tabs"
        android:layout_height="wrap_content"
        android:layout_width="160dp"       
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"          
        android:layout_marginBottom="50dp">
        <RadioButton           
            android:id="@+id/radio_btn_1"
            android:checked="true"
            android:width="2dp"
            android:height="2dp"  />
        <RadioButton              
            android:id="@+id/radio_btn_2"
            android:width="2dp"
            android:height="2dp" />
        <RadioButton              
            android:id="@+id/radio_btn_3"
            android:width="2dp"
            android:height="2dp" />
        <RadioButton           
            android:id="@+id/radio_btn_4"
            android:width="2dp"
            android:height="2dp" />        
    </RadioGroup>  
</RelativeLayout>
