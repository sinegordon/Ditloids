<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fon_options480"
    android:gravity="top">
    
    <Button
        android:id="@+id/arrowButton"
        android:layout_width="30px"
        android:layout_height="21px"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"        
        android:background="@drawable/arrow"/>

    <Button android:id="@+id/sfxButton"
        android:layout_height="38px" 
        android:layout_width="222px" 
        android:layout_marginBottom="15px"	 
        android:background="@drawable/sfx_off"
        android:layout_marginTop="80px"
		android:layout_marginLeft="50px"/>

    <Button android:id="@+id/musicButton"
        android:layout_height="38px" 
        android:layout_width="222px"  
        android:layout_marginBottom="15px"	
        android:background="@drawable/music_off"
		android:layout_marginLeft="50px"         />
    
    <Button android:id="@+id/resetButton"
        android:layout_height="38px" 
        android:layout_width="222px" 
        android:layout_marginBottom="15px"	
        android:background="@drawable/reset" 
		android:layout_marginLeft="50px"         />        
</LinearLayout>