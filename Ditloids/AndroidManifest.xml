<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ditloids"
    android:versionCode="4"
    android:versionName="1.0.3" >

    <uses-sdk android:minSdkVersion="9" 
              android:targetSdkVersion="9"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name="com.ditloids.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.ditloids.LevelsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.ditloids.TasksActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.ditloids.TaskActivity"
            android:windowSoftInputMode="stateVisible"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.ditloids.OptionsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.ditloids.FaqActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>